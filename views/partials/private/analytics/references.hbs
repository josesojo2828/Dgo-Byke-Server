<section class="space-y-6">

    {{!-- 1. SECCIÓN DE COMPARTIR CÓDIGO --}}
    <div class="card bg-base-100 shadow-sm border border-gray-200">
        <div class="card-body flex-row flex-wrap items-center justify-between gap-4 p-6">

            <div>
                <h2 class="card-title text-xl mb-1">
                    <i class="bi bi-gift text-primary"></i>
                    {{ __ 'common.referral.share_title' lang }}
                </h2>
                <p class="text-gray-500 text-sm">{{ __ 'common.referral.share_desc' lang }}</p>
            </div>

            <div class="w-full max-w-md">
                <div class="join w-full">
                    <input type="text" value="{{ object.referralCode }}"
                        class="input input-bordered join-item w-full font-mono text-sm bg-gray-50" readonly />
                    <div class="tooltip" data-tip="{{ __ 'common.actions.copy' lang }}" id="referral-tooltip">
                        <button class="btn btn-primary join-item" onclick="copyReferralCode('{{ object.referralCode }}')">
                            <i class="bi bi-clipboard"></i>
                            {{ __ 'common.actions.copy' lang }}
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    {{!-- 2. GRID DE ESTADÍSTICAS (KPIs) --}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

        {{!-- Total Invitados --}}
        <div class="stat bg-white shadow-sm rounded-2xl border border-gray-100">
            <div class="stat-figure text-primary">
                <i class="bi bi-people text-3xl opacity-20"></i>
            </div>
            <div class="stat-title">{{ __ 'common.referral.total_invited' lang }}</div>
            <div class="stat-value text-primary">{{ refAnalytics.totalReferred }}</div>
            <div class="stat-desc">{{ __ 'common.referral.total_desc' lang }}</div>
        </div>

        {{!-- Conversiones Activas --}}
        <div class="stat bg-white shadow-sm rounded-2xl border border-gray-100">
            <div class="stat-figure text-success">
                <i class="bi bi-person-check text-3xl opacity-20"></i>
            </div>
            <div class="stat-title">{{ __ 'common.referral.active_clients' lang }}</div>
            <div class="stat-value text-success">{{ refAnalytics.activeConversions }}</div>
            <div class="stat-desc">↗︎ {{ refAnalytics.conversionRate }}% {{ __ 'common.referral.conversion_rate' lang }}</div>
        </div>

        {{!-- Ganancias (Money) --}}
        <div class="stat bg-white shadow-sm rounded-2xl border border-gray-100">
            <div class="stat-figure text-secondary">
                <i class="bi bi-cash-stack text-3xl opacity-20"></i>
            </div>
            <div class="stat-title">{{ __ 'common.referral.earnings' lang }}</div>
            <div class="stat-value text-secondary">${{ refAnalytics.revenueGenerated }}</div>
            <div class="stat-desc">{{ __ 'common.referral.earnings_desc' lang }}</div>
        </div>
    </div>

    {{!-- 3. TABLA DE ÚLTIMOS REFERIDOS --}}
    <div class="card bg-white shadow-sm border border-gray-200">
        <div class="card-body p-0">
            <div class="p-4 border-b border-gray-100 flex justify-between items-center">
                <h3 class="font-bold text-gray-700">{{ __ 'common.referral.recent_activity' lang }}</h3>
            </div>

            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>{{ __ 'common.form.user' lang }}</th>
                            <th>{{ __ 'common.form.date' lang }}</th>
                            <th>{{ __ 'common.form.status' lang }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each refAnalytics.recentReferrals}}
                        <tr>
                            <td>
                                <div class="flex items-center gap-3">
                                    <div class="avatar placeholder">
                                        <div class="bg-neutral text-neutral-content rounded-full w-8">
                                            <span class="text-xs">{{ this.firstName.[0] }}</span>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="font-bold">{{ this.firstName }} {{ this.lastName }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-gray-500 text-sm">
                                {{ this.createdAt }}
                                {{!-- Si tienes un helper de fecha úsalo: {{ formatDate this.createdAt }} --}}
                            </td>
                            <td>
                                {{#if (eq this.status 'ACTIVE')}}
                                <div class="badge badge-success gap-2 text-white">
                                    Active
                                </div>
                                {{else}}
                                <div class="badge badge-ghost gap-2">
                                    {{ this.status }}
                                </div>
                                {{/if}}
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="3" class="text-center py-8 text-gray-400">
                                <i class="bi bi-inbox text-4xl mb-2 block"></i>
                                {{ __ 'common.referral.no_data' lang }}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</section>