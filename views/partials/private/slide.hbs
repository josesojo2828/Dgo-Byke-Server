<div class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg z-50 transition-all duration-300 ease-in-out transform -translate-x-full md:translate-x-0"
    id="sidebar">
    <div class="flex items-center justify-between p-4 border-b">
        <h1 class="text-xl font-bold text-blue-600 flex items-center">
            <i class="bi bi-graph-up-arrow mr-2"></i> {{ __ 'common.app_name' lang }}
        </h1>
        <button id="close-sidebar" class="md:hidden text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <nav class="p-4">

        {{#each sidebar as |section|}}
        <div class="mb-6">
            <h2 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">{{ __ section.title lang }}</h2>

            <ul class="mb-6">
                {{#each section.items as |item|}}
                <li class="mb-1">
                    <a href="{{ item.link }}" class="flex items-center p-1 text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i class="bi bi-{{ item.icon }} mr-3"></i>
                        <span>{{ __ item.title lang }}</span>
                    </a>
                </li>
                {{/each}}
            </ul>

        </div>  
        {{/each}}
    </nav>
</div>