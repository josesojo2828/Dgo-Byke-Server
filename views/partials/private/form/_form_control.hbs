<div class="mb-4 {{className}}">

    {{! Etiqueta para todos los tipos excepto checkbox/radio }}
    {{#unless (isCheckboxOrRadio controlType)}}
    <label for="{{name}}" class="block text-sm font-medium text-gray-700">
        {{__ label lang}} {{#if required}}<span class="text-red-500">*</span>{{/if}}
    </label>
    {{/unless}}

    {{#if (eq controlType 'input')}}
    <input 
        type="{{type}}" 
        name="{{name}}" 
        id="{{name}}" 
        value="{{value}}" 
        placeholder="{{__ placeholder lang}}"
        class="input foucs:outline-none w-full rounded-md border-gray-300 shadow-sm sm:text-sm" 
        {{#if required}}required{{/if}} 
        {{#if disabled}} disabled{{/if}} 
        {{#if readonly}} readonly{{/if}} 
        {{#if min}} min="{{min}}"{{/if}} 
        {{#if max}} max="{{max}}" {{/if}} 
        />

    {{else if (eq controlType 'textarea')}}
    <textarea name="{{name}}" id="{{name}}" rows="{{rows}}"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" {{#if required}}required{{/if}} {{#if
        disabled}}disabled{{/if}} placeholder="{{__ placeholder lang}}">{{value}}</textarea>

    {{else if (eq controlType 'select')}}
    <select name="{{name}}" id="{{name}}"
        class="select foucs:outline-none w-full rounded-md border-gray-300 shadow-sm sm:text-sm" {{#if
        required}}required{{/if}} {{#if multiple}}multiple{{/if}}>
        <option value="" disabled selected>Seleccione {{__ label lang}}</option>
        {{#each options}}
        <option value="{{value}}" {{#if (eq value ../value)}}selected{{/if}}>
            {{__ label lang}}
        </option>
        {{/each}}
    </select>

    {{! Bloque dedicado para Checkbox }}
    {{else if (eq controlType 'checkbox')}}
    <div class="mt-1">
        <label class="inline-flex items-center cursor-pointer">
            <input type="checkbox" name="{{name}}" id="{{name}}" value="{{value}}" {{! Clases de DaisyUI/Tailwind para
                Checkbox }}
                class="checkbox checkbox-primary h-5 w-5 text-indigo-600 border-gray-300 focus:ring-indigo-500" {{#if
                checked}} checked{{/if}} {{#if required}} required{{/if}} {{#if disabled}} disabled{{/if}} />
            {{! La etiqueta se muestra junto al control }}
            <span class="ml-2 text-sm font-medium text-gray-700">
                {{__ label lang}} {{#if required}}<span class="text-red-500">*</span>{{/if}}
            </span>
        </label>
    </div>

    {{! Bloque dedicado para Radio }}
    {{else if (eq controlType 'radio')}}
    <div class="mt-1">
        <label class="inline-flex items-center cursor-pointer">
            <input type="radio" name="{{name}}" id="{{name}}" value="{{value}}" {{! Clases de DaisyUI/Tailwind para
                Radio }} class="radio radio-primary h-5 w-5 text-indigo-600 border-gray-300 focus:ring-indigo-500" {{#if
                checked}} checked{{/if}} {{#if required}} required{{/if}} {{#if disabled}} disabled{{/if}} />
            {{! La etiqueta se muestra junto al control }}
            <span class="ml-2 text-sm font-medium text-gray-700">
                {{__ label lang}} {{#if required}}<span class="text-red-500">*</span>{{/if}}
            </span>
        </label>
    </div>

    {{/if}}

    {{! Manejo de errores de validaci√≥n }}
    {{#if errorKey}}
    <p class="mt-2 text-sm text-red-600">{{__ errorKey lang}}</p>
    {{/if}}
</div>