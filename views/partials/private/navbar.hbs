<header class="bg-white shadow-sm sticky top-0 z-40">
    <div class="flex items-center justify-between px-4 pt-3 pb-4">
        <div class="flex items-center">
            {{!-- <button id="open-sidebar" class="mr-4 text-gray-500 hover:text-gray-700 ">
                <i class="bi bi-speedometer2"></i>
            </button> --}}
            <h2 class="text-2xl font-semibold">{{ __ pageTitle lang }}</h2>
        </div>

        <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="">
                <div class="flex items-center space-x-4">
                    <div class="flex items-center">
                        <img src="{{user.avatarUrl}}" class="w-8 h-8 rounded-full">
                        <span class="ml-2 text-sm font-medium hidden md:inline">@{{ user.username }}</span>
                    </div>
                </div>
            </div>
            <ul tabindex="-1" class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm">
                <li><a href="/dashboard/users/{{user.id}}">{{ __ "common.profile" lang }}</a></li>
                <li class="flex justify-between w-full">
                    <a href="?lang=en">en</a>
                    <a href="?lang=es">es</a>
                </i>
                <li><a>{{ __ "common.logout" lang }}</a></li>
            </ul>
        </div>


    </div>

    {{#if tabs}}
    <nav class="flex overflow-x-auto bg-white shadow-sm whitespace-nowrap px-4 border-t border-gray-600">
        {{#each tabs as |tab|}}
        {{#ifeq ../tabName tab.title}}
        <span class="tab-active font-medium px-3 py-2 text-sm text-blue-600 border-b-2 border-blue-600">
            {{ __ tab.title lang }}
        </span>
        {{else}}
        <a href="{{ tab.link }}" class="tab px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700">
            {{ __ tab.title lang }}
        </a>
        {{/ifeq}}
        {{/each}}
    </nav>
    {{/if}}
</header>