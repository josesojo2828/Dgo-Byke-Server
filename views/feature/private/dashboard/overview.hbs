    {{> private/navbar}}

    <!-- Main Content Area -->
    <main class="p-4">
            {{!-- ------------------------------------------------------------------------------------------------------ --}}
            {{!-- USER ANALYTICS --}}
            {{!-- ------------------------------------------------------------------------------------------------------ --}}

            <h2 class="text-xl font-black text-gray-900">{{ __
                'common.dashboard.user_analytics' lang }}</h2>

            <div class="">

                {{logger user}}

                {{#if userAnalytics}}
                {{#if userAnalytics.ANALYTICS_USER_CARDS}}
                <section class="summary-cards">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        {{{singlecard userAnalytics.ANALYTICS_USER_CARDS.total}}}
                        {{{singlecard userAnalytics.ANALYTICS_USER_CARDS.active}}}
                        {{{singlecard userAnalytics.ANALYTICS_USER_CARDS.suspended}}}
                        {{{singlecard userAnalytics.ANALYTICS_USER_CARDS.deleted}}}
                    </div>
                </section>
                {{/if}}

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-3">
                    {{#if userAnalytics.ANALYTICS_USER__BY_PERMIT}}
                    <section class="bg-white p-6 rounded-xl shadow-sm transition duration-300">
                        <canvas id="{{userAnalytics.ANALYTICS_USER__BY_PERMIT.id}}"></canvas>
                        <script>
                            const permitData = {{{ json userAnalytics.ANALYTICS_USER__BY_PERMIT }}};
                            renderPieChart(permitData);
                        </script>
                    </section>
                    {{/if}}

                    {{#if userAnalytics.ANALYTICS_USER_LAST_REGISTER}}
                    <section class="col-span-2 bg-white p-6 rounded-xl shadow-sm transition duration-300">
                        <table class="table-sm table w-full">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Dispositivo</th>
                                    <th>Inicio</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each userAnalytics.ANALYTICS_USER_LAST_REGISTER}}
                                <tr>
                                    <td>{{this.fullName}}</td>
                                    <td>{{this.device}}</td>
                                    <td>{{this.startedAt}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </section>
                    {{/if}}

                    {{#if userAnalytics.ANALYTICS_USER_LAST_SESSION}}
                    <section class="col-span-2 bg-white p-6 rounded-xl shadow-sm transition duration-300">
                        <h3>Últimos Inicios de Sesión</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Dispositivo</th>
                                    <th>Inicio</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each userAnalytics.ANALYTICS_USER_LAST_SESSION}}
                                <tr>
                                    <td>{{fullName}}</td>
                                    <td>{{device}}</td>
                                    <td>{{startedAt}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </section>
                    {{/if}}
                </div>
                {{/if}}
            </div>

            {{!-- ------------------------------------------------------------------------------------------------------ --}}
            {{!-- WALLET ANALYTICS --}}
            {{!-- ------------------------------------------------------------------------------------------------------ --}}

            <h2 class="mt-5 text-xl font-black text-gray-900">{{ __
                'common.dashboard.wallet_analytics' lang }}</h2>

            {{#if wallet.ANALYTICS_WALLET_SUMMARY}}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-6 mt-6 mb-8">
                {{#singlecard wallet.ANALYTICS_WALLET_SUMMARY.summary.totalWallets lang }}
                {{{this}}}
                {{/singlecard}}
                {{#singlecard wallet.ANALYTICS_WALLET_SUMMARY.summary.totalBalance lang }}
                {{{this}}}
                {{/singlecard}}
                <div></div>

                {{#if wallet.ANALYTICS_WALLET_SUMMARY.distribution}}
                <section class="bg-white p-6 rounded-xl shadow-sm transition duration-300">
                    <canvas id="{{wallet.ANALYTICS_WALLET_SUMMARY.distribution.id}}"></canvas>
                    <script>
                        const distributionData = {{{ json wallet.ANALYTICS_WALLET_SUMMARY.distribution }}};
                        renderPieChart(distributionData);
                    </script>
                </section>
                {{/if}}

                {{#if wallet.ANALYTICS_WALLET_TRANSACTIONS}}
                <section class="md:col-span-2">
                    <div class="flex justify-between items-center">
                        <h2>{{ __ wallet.ANALYTICS_WALLET_TRANSACTIONS.title lang }}</h2>
                    </div>
                    {{> private/table/_table
                    list=wallet.ANALYTICS_WALLET_TRANSACTIONS.list
                    columns=wallet.ANALYTICS_WALLET_TRANSACTIONS.columns
                    actions=wallet.ANALYTICS_WALLET_TRANSACTIONS.actions
                    sortParams=wallet.ANALYTICS_WALLET_TRANSACTIONS.sortParams
                    currentQuery=wallet.ANALYTICS_WALLET_TRANSACTIONS.currentQuery
                    lang=lang
                    }}
                </section>
                {{/if}}
            </div>
            {{/if}}

