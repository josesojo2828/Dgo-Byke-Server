
{{> public/navbar }}

<section id="home" class="pt-32 pb-20 bg-gradient-to-b from-blue-50 to-white">
  <div class="container mx-auto px-6 flex flex-col lg:flex-row items-center">
    <div class="lg:w-1/2 mb-12 lg:mb-0 fade-in">
      <span class="text-sm font-medium text-blue-600 mb-2 inline-block px-3 py-1 bg-blue-100 rounded-full">
        {{ __ 'landing.problem.badge' lang }}
      </span>
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-800 mb-6 leading-tight">
        {{ __ 'landing.problem.title' lang }}
        <span class="gradient-text">{{ __ 'landing.problem.dest' lang }}</span>
        {{ __ 'landing.problem.title2' lang }}
      </h1>
      <p class="text-lg text-gray-600 mb-8 max-w-lg">{{ __ 'landing.problem.text' lang }}</p>
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="#contact"
          class="px-8 py-3 gradient-bg text-white rounded-lg font-medium hover:opacity-90 transition shadow-lg text-center">
          {{ __ 'landing.hero.cta' lang }}
          <i class="bi bi-arrow-right ml-2"></i>
        </a>
      </div>
      <div class="mt-10 flex flex-wrap gap-6">
        <div class="flex items-center">
          <div class="mr-3">
            <div class="w-12 h-12 bg-white rounded-full shadow-md flex items-center justify-center text-blue-600">
              <i class="bi bi-person-check-fill text-2xl gradient-text"></i>
            </div>
          </div>
          <div>
            <p class="font-bold text-lg">150+</p>
            <p class="text-sm text-gray-600">{{ __ 'landing.problem.safe_clients' lang }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="lg:w-1/2 flex justify-center fade-in" style="animation-delay: 0.3s;">
      <div class="relative">
        <div class="absolute -inset-4 bg-blue-100 rounded-2xl -z-10"></div>
        <img
          src="https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&h=880&q=80"
          alt="Saad Ullah Buttar" class="w-full max-w-md rounded-xl shadow-xl">
        <div class="hidden sm:block absolute -bottom-8 -right-8 bg-white p-6 rounded-xl shadow-lg">
          <div class="flex items-center">
            <div class="mr-4">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <i class="bi bi-people-fill text-2xl gradient-text"></i>
              </div>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-600">{{ __ 'landing.hero.support' lang }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{!-- LOGOS --}}
<section class="py-12 bg-white">
  <div class="container mx-auto px-6">
    <p class="text-center text-gray-500 mb-8">{{ __ 'landing.logos.title' lang }}</p>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-70">
      <img src="https://logo.clearbit.com/hsbc.com" alt="HSBC" class="h-8">
      <img src="https://logo.clearbit.com/standardchartered.com" alt="Standard Chartered" class="h-10">
      <img src="https://logo.clearbit.com/citibank.com" alt="CitiBank" class="h-8">
      <img src="https://logo.clearbit.com/ubl.com.pk" alt="UBL" class="h-10">
      <img src="https://logo.clearbit.com/hbl.com" alt="HBL" class="h-10">
    </div>
  </div>
</section>

{{!-- SERVICES --}}
<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <span class="text-sm font-medium text-blue-600 px-3 py-1 bg-blue-100 rounded-full">{{ __ 'landing.service.badge'
        lang }}</span>
      <h2 class="text-3xl font-bold mt-4 text-gray-800">{{ __ 'landing.service.title' lang }}
        <span class="gradient-text">{{ __ 'landing.service.dest' lang }}</span>
      </h2>
      <p class="max-w-2xl mx-auto text-gray-600 mt-4">{{ __ 'landing.service.text' lang }}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

      {{#each services as |service|}}
      <div class="bg-white rounded-xl p-8 shadow-sm card-hover fade-in">
        <div class="w-16 h-16 gradient-bg rounded-lg flex items-center justify-center mb-6">
          <i class="fas fa-chart-line text-white text-2xl"></i>
        </div>
        <h3 class="text-xl font-bold mb-4 text-gray-800">{{ __ service.title lang }}</h3>
        <p class="text-gray-600 mb-5">{{ __ service.description lang }}</p>

        <a href="#contact" class="text-blue-600 font-medium hover:text-blue-800 inline-flex items-center">
          Learn more <i class="bi bi-arrow-right ml-2"></i>
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{!-- Stats --}}
<section class="py-16 gradient-bg text-white">
  <div class="container mx-auto px-6">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {{#each stats as |stat|}}
      <div class="text-center fade-in">
        <div class="text-4xl font-bold mb-2">{{stat.value}}</div>
        <p class="text-blue-200">{{ __ stat.stat lang }}</p>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{!-- ABOUT --}}
<section id="about" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="flex flex-col lg:flex-row items-center">
      <div class="lg:w-1/2 mb-12 lg:mb-0 lg:pr-12 fade-in">
        <div class="relative">
          <img
            src="https://images.unsplash.com/photo-1573497491208-6b1acb260507?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&h=800&q=80"
            alt="Saad Ullah Buttar at work" class="w-full rounded-xl shadow-xl">
          <div class="absolute -bottom-8 -left-8 bg-white p-6 rounded-xl shadow-lg hidden md:block">
            <div class="flex items-center">
              <div class="mr-4">
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                  <i class="fas fa-certificate text-blue-600"></i>
                </div>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600">{{ __ 'landing.about.badge' lang }}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:w-1/2 fade-in" style="animation-delay: 0.3s;">
        <span class="text-sm font-medium text-blue-600 px-3 py-1 bg-blue-100 rounded-full inline-block mb-4">{{ __
          'landing.about.badge' lang }}</span>
        <h2 class="text-3xl font-bold text-gray-800 mb-6"><span class="">{{{ __ 'landing.about.title' lang }}}</span>
        </h2>
        <p class="text-gray-600 mb-6">
          {{ __ 'landing.about.text' lang }}
        </p>
        <div class="mb-8">
          <h4 class="font-bold text-lg text-gray-800 mb-4">{{ __ 'landing.about.expertise_title' lang }}</h4>
          <div class="grid sm:grid-cols-2 gap-4">

            {{#each expertise as |item|}}
            <div class="flex items-center bg-blue-50 rounded-lg p-4">
              <div class="w-10 h-10 gradient-bg rounded-full flex items-center justify-center text-white mr-4">
                <i class="fas fa-chart-pie"></i>
              </div>
              <span class="font-medium">{{ __ item.title lang }}</span>
            </div>
            {{/each}}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

{{!-- TESTIMONIALS --}}
<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 fade-in">
      <span class="text-sm font-medium text-blue-600 px-3 py-1 bg-blue-100 rounded-full">{{ __
        'landing.testimonials.badge' lang }}</span>
      <h2 class="text-3xl font-bold mt-4 text-gray-800">{{{ __ 'landing.testimonials.title' lang }}}</h2>
      <p class="max-w-2xl mx-auto text-gray-600 mt-4">{{{ __ 'landing.testimonials.subtitle' lang }}}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">

      {{#each testimonials as |item|}}
      <div class="bg-white rounded-xl p-8 shadow-sm card-hover fade-in">
        <div class="flex items-center mb-4">
          <div class="w-16 h-16 rounded-full overflow-hidden mr-4">
            <img src="{{  item.imageUrl }}" alt="Client" class="w-full h-full object-cover">
          </div>
          <div>
            <h4 class="font-bold text-gray-800">{{item.name}}</h4>
            <p class="text-sm text-gray-500">{{ item.role }}</p>
          </div>
        </div>
        <p class="text-gray-600 mb-4 italic">{{ item.quote }}</p>
        <div class="flex text-yellow-400">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{!-- CTA --}}
<section class="py-16 gradient-bg text-white">
  <div class="container mx-auto px-6 text-center">
    <div class="max-w-3xl mx-auto fade-in">
      <h2 class="text-3xl font-bold mb-6">{{{ __ 'landing.cta_final.title' lang }}}</h2>
      <p class="text-lg text-blue-100 mb-8">{{{ __ 'landing.cta_final.text' lang }}}</p>
      <a href="#contact"
        class="inline-block px-8 py-4 bg-white text-blue-600 rounded-lg font-bold hover:bg-blue-50 transition shadow-lg">
        {{{ __ 'landing.cta_final.button' lang }}} <i class="bi bi-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</section>

{{> public/footer }}