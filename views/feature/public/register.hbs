{{> public/navbar }}


<div class="container mx-auto px-6 py-20">
    <div class="flex justify-center items-center">
        <div class="card card-bordered card-compact w-full max-w-md bg-white p-5 shadow-lg">
            <div class="card-body">
                <h2 class="card-title text-center text-2xl font-bold text-gray-800">
                    {{ __ 'common.auth.register' lang }}
                </h2>
                <form action="/login" method="post">
                    <div class="mt-3">
                        <label class="label">
                            <span class="text-xs font-bold">{{ __ 'form.labels.email' lang }}</span>
                        </label>
                        <input type="email" name="email" class="input border w-full outline-none rounded p-1 px-3 text-sm text-gray-600" required>
                    </div>
                    <div class="mt-3">
                        <label class="label">
                            <span class="text-xs font-bold">{{ __ 'form.labels.password' lang }}</span>
                        </label>
                        <input type="password" name="password" class="input border w-full outline-none rounded p-1 px-3 text-sm text-gray-600" required>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="bg-blue-500 hover:opacity-90 transition text-white rounded-md font-bold px-4 py-2 text-sm">
                            {{ __ 'form.labels.submit' lang }}
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="flex flex-col items-center justify-between">
                    <div class="flex items-center">
                        <h3 class="text-lg font-bold gradient-text">{{  __ 'common.app_name' lang }}</h3>
                    </div>                    
                    <div class="flex items-center">                        
                        <a href="/register" class="text-center text-sm mt-1 hover:text-blue-900 font-medium hover:opacity-90 transition">
                            {{ __ 'common.auth.login' lang }}
                        </a>
                    </div>
                    <div class="flex items-center">
                        <a href="/auth/forgot-password" class="text-center text-sm mt-1 hover:text-blue-900 font-medium hover:opacity-90 transition">
                            {{ __ 'form.labels.forgot_password' lang }}
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

{{> public/footer }}